{
  "name": "dmt-software/laposta-api",
  "description": "Client to consume the Laposta API",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bas de Mes",
      "email": "bas@dmt-software.nl"
    }
  ],
  "autoload": {
    "psr-4": {
      "DMT\\Laposta\\Api\\": "src/"
    }
  },
  "require": {
    "php": ">=8.3",
    "ext-json": "*",
    "dmt-software/command-bus-validator": "^1.0|^2.0",
    "dmt-software/http-client-middleware": "^0.1.3 | ^1.0 | ^2.0",
    "jms/serializer": "^3.23",
    "league/tactician": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0 | ^2.0",
    "symfony/console": ">=5.4"
  },
  "autoload-dev": {
    "psr-4": {
      "DMT\\Test\\Laposta\\Api\\": "tests/"
    }
  },
  "require-dev": {
    "psr/container": ">=1.1",
    "phpunit/phpunit": "^12.4",
    "guzzlehttp/psr7": "^2.4",
    "guzzlehttp/guzzle": "^7.5"
  },
  "bin": [
    "bin/laposta"
  ],
  "scripts": {
    "post-install-cmd": [
      "chmod +x bin/laposta"
    ]
  }
}
